task = []

def addtask():
    t = input("Enter task: ")
    p = int(input("Enter Task Priority: "))
    task.append((t, p))
    print("Task added successfully.")

def removetask():
    displaytask()
    ind = int(input("Enter index to remove: ")) - 1
    if 0 <= ind < len(task):
        task.pop(ind)
        print("Task removed successfully.")
    else:
        print("Invalid index.")

def updatetask():
    displaytask()
    ind = int(input("Enter index to update: ")) - 1
    if 0 <= ind < len(task):
        t = input("Enter new task: ")
        p = int(input("Enter new Task Priority: "))
        task[ind] = (t, p)
        print("Task updated successfully.")
    else:
        print("Invalid index.")

def displaytask():
    if not task:
        print("No tasks available.")
    else:
        for i, x in enumerate(task, start=1):
            print(f"{i}. Task: {x[0]} | Priority: {x[1]}")

def sortingtask():
    task.sort(key=lambda x: x[1])  # Sorting by priority
    print("Tasks sorted by priority.")
    displaytask()

while True:
    ch = int(input("Enter Choice:\n1. Add Task\n2. Remove Task\n3. Update Task\n4. Display\n5. Sort Tasks\n6. Exit\nEnter choice: "))
    
    if ch == 1:
        addtask()
    elif ch == 2:
        removetask()
    elif ch == 3:
        updatetask()
    elif ch == 4:
        displaytask()
    elif ch == 5:
        sortingtask()
    elif ch == 6:
        print("Exiting...")
        break
    else:
        print("Enter a valid choice.")
